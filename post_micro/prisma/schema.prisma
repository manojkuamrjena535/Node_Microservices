generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String
  authorId  String   // references User.id from auth_micro (not enforced in Mongo)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
